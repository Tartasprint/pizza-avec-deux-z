extends layout

block content
  form.form-signup(method='post' action='/auth/signup' id='login_form')
    h1.h3.mb-3.font-weight-normal Please create an account
    label.sr-only(for='inputEmail') Email address
    input#inputEmail.form-control(type='email' placeholder='Email address' required='' autofocus='' name='username')
    label.sr-only(for='inputPassword') Password
    input#inputPassword.form-control(type='password' placeholder='Password' required='' name='password')
    .checkbox.mb-3
        label
        input(type='checkbox' value='remember-me')
        |  Remember me
    button.btn.btn-lg.btn-primary.btn-block(type='submit') Create
block additional_scripts
  script(src="/static/js/auth.js" defer=true)